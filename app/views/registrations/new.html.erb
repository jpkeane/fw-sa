<% provide(:title, 'Sign up') %>
<div class="row">
  <div class="col-md-4">
    <div class="card login-helper">
      <div class="card-header">
        <h2 class="card-title">Description and help</h2>
      </div>
      <div class="card-block">

      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Log in</h2>
      </div>
      <div class="card-block">
        <%= form_for(@user, url: registration_create_path) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

          <div class="form-group">
            <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
            <i class="form-group__bar"></i>
          </div>

          <div class="form-group">
            <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
            <i class="form-group__bar"></i>
          </div>

          <div class="form-group">
            <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
            <i class="form-group__bar"></i>
          </div>

          <%= f.fields_for :email_addresses do |ff| %>
            <div class="form-group">
              <%= ff.email_field :email_address, class: 'form-control', placeholder: 'Email address' %>
              <i class="form-group__bar"></i>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            <i class="form-group__bar"></i>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
            <i class="form-group__bar"></i>
          </div>

          <%= f.submit "Register", class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>