<% provide(:title, 'Log in') %>
<div class="row">
  <div class="col-md-4">
    <div class="card login-helper">
      <div class="card-header">
        <h2 class="card-title">Description and help</h2>
      </div>
      <div class="card-block">

      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Log in</h2>
      </div>
      <div class="card-block">
        <%= form_for(:session, url: login_create_path) do |f| %>
            <div class="form-group">
              <%= f.text_field :username, class: 'form-control', placeholder: 'Username or Email address' %>
              <i class="form-group__bar"></i>
            </div>

            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
              <i class="form-group__bar"></i>
            </div>

            <div class="form-group">
              <%= f.label :remember_me, class: 'custom-control custom-checkbox' do %>
                  <%= f.check_box :remember_me, class: 'custom-control-input' %>
                  <span class="custom-control-indicator"></span>
                  <span class="custom-control-description">Remember me on this computer</span>
              <% end %>
            </div>

            <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
        <% end %>
        <hr />
        <%= link_to 'Forgot password?', password_reset_path, class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
</div>
