<% provide(:title, 'Change Password') %>
<div class="row">

  <div class="col-md-4">
    <div class="card login-helper">
      <div class="card-header">
        <h2 class="card-title">Description and help</h2>
      </div>
      <div class="card-block">

      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Edit Password</h2>
      </div>
      <div class="card-block">
        <%= form_for(@user, url: users_update_password_path) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <div class="form-group">
              <%= f.password_field :current_password, class: 'form-control', placeholder: 'Current password' %>
              <i class="form-group__bar"></i>
            </div>

            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
              <i class="form-group__bar"></i>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
              <i class="form-group__bar"></i>
            </div>

            <%= f.submit 'Change Password', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
