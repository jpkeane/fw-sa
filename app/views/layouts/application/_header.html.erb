<header class="header">
  <div class="header__logo">
    <h1><%= link_to 'Floworx', root_path %></h1>
  </div>

  <ul class="top-nav">
    <%= link_to logout_path, class: 'btn btn-info sessions-button', method: :delete do %>
        Log out
        <i class="zmdi zmdi-account-add zmdi-hc-fw"></i>
    <% end %>

    <%= link_to logout_all_path, class: 'btn btn-info sessions-button', method: :delete do %>
        Log out from all devices
        <i class="zmdi zmdi-account-add zmdi-hc-fw"></i>
    <% end %>
  </ul>

  <ul class="nav top-menu">
    <li class="nav-item <%= active_action?('dashboard') %>">
      <a href="#" class="nav-link">Dashboard</a>
    </li>
  </ul>
</header>
