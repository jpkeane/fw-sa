<header class="header">
  <div class="header__logo">
    <h1><%= link_to 'Floworx SysArch', root_path %></h1>
  </div>

  <ul class="top-nav">
    <% if logged_in? %>
      <%= link_to dashboard_path, class: 'btn btn-secondary sessions-button' do %>
          Dashboard
          <i class="zmdi zmdi-view-dashboard zmdi-hc-fw"></i>
      <% end %>
    <% else %>
      <%= link_to login_path, class: 'btn btn-secondary sessions-button' do %>
          Log in
          <i class="zmdi zmdi-key zmdi-hc-fw"></i>
      <% end %>

      <%= link_to registration_path, class: 'btn btn-secondary sessions-button' do %>
          Sign up
          <i class="zmdi zmdi-account-add zmdi-hc-fw"></i>
      <% end %>
    <% end %>
  </ul>

  <ul class="nav top-menu">
    <li class="nav-item <%= active_action?('home') %>">
      <%= link_to 'Home', root_path, class: 'nav-link' %>
    </li>
    <li class="nav-item <%= active_action?('about') %>">
      <%= link_to 'About', about_path, class: 'nav-link' %>
    </li>
    <li class="nav-item <%= active_action?('pricing') %>">
      <%= link_to 'Pricing', pricing_path, class: 'nav-link' %>
    </li>
  </ul>
</header>
